/**
 * Generate branded JPEG derivatives for Islandora Large Image and Page Objects
 *
 * @todo Refactor into a class for Islandora Collection Objects
 *
 */
function islandora_dss_generate_derivative_jpg_large_image($pid, $connection = NULL, $collection_name = NULL, $path_alias = NULL,
							   $is_back = FALSE, $delete_layers = FALSE, $resize = TRUE, $regenerate = FALSE,
							   $ds_id = 'JPG', $ds_label = 'Medium sized JPEG') {

  if(!isset($connection)) {

    $url = 'http://localhost:8080/fedora';
    $connection = islandora_get_tuque_connection(user_load(1), $url);
  }
  $object = $connection->repository->getObject(urldecode($pid));

  // Do not attempt to derive a branded JPEG for the Object if the MODS Document does not exist
  $jpg_ds = $object[$ds_id];

  if(!$regenerate && $jpg_ds->size > 9000) {

    drush_log(dt("The JPG datastream for !object_id appears to been generated properly", array('!object_id' => $object->id)), 'ok');
    return TRUE;
  }

  drush_log( dt('Deriving the branded JPEG for !object_id', array('!object_id' => $object->id)), 'ok' );

  if(!isset($collection_name)) {

    $collection_name = array_shift(islandora_dss_get_cdm_collections($object));
  }
  if(!isset($path_alias)) {

    $path_alias = drupal_get_path_alias("islandora/object/{$object->id}");
  }

  $base_name = str_replace(':', '-', $object->id);

  module_load_include('inc', 'islandora_large_image', 'includes/derivatives');

  // Apparently, the TIFF wasn't ingested for Page Objects

  /*
  if(!$object['OBJ']) {

    $parent = islandora_object_load(array_pop($object->getParents()));
    $metadb_file_path = islandora_dss_get_metadb_file_path($parent, $is_back);

    drush_log("Ingesting $metadb_file_path into the OBJ datastream for for {$object->id}...", 'ok');

    islandora_large_image_add_datastream($object, 'OBJ', $metadb_file_path, 'image/tiff', t('Lossless TIFF'));
  }
  */

  //$tiff_file = file_save_data($object['OBJ']->content, "temporary://{$base_name}_OBJ.tiff");

  $obj_ds = $object['OBJ'];
  if(!$obj_ds) {

    $obj_ds = $object->constructDatastream('OBJ', 'M');
    $obj_ds->label = t('Lossless TIFF');
    $obj_ds->mimeType = 'image/tiff';

    $object->ingestDatastream($obj_ds);

    $obj_data = '';
  } else {

    $obj_data = $obj_ds->content;
  }

  if(empty($obj_data)) {

    drush_log("{$object->id} appears to be missing a TIFF datastream", 'error');

    //$parent = islandora_object_load(array_pop($object->getParents()));
    $metadb_file_path = islandora_dss_get_metadb_file_path($object, $is_back);

    drush_log("Ingesting $metadb_file_path into the OBJ datastream for for {$object->id}...", 'ok');

    //islandora_large_image_add_datastream($object, 'OBJ', $metadb_file_path, 'image/tiff', t('Lossless TIFF'));
    $obj_ds->setContentFromFile($metadb_file_path);

    drush_log("Ingested $metadb_file_path into the OBJ datastream for for {$object->id}", 'success');
  }


  $jp2_ds = $object['JP2'];

  $jp2_data = $jp2_ds->content;

  if(empty($jp2_data)) {

    drush_log("{$object->id} appears to be missing a JPEG2000 datastream", 'error');

    //$tiff_file = file_save_data($obj_data, "temporary://{$base_name}_OBJ.tiff");
    $tiff_file = file_create_filename("{$base_name}_OBJ.tiff", 'temporary://');
    $object['OBJ']->getContent($tiff_file);

    $base_name = str_replace(':', '-', $object->id);
    islandora_large_image_create_JP2_derivative($object, $tiff_file, $base_name);

    //file_delete($tiff_file);
    file_unmanaged_delete($tiff_file);

    $jp2_data = $object['JP2']->content;

    return FALSE;
  }

  $jp2file = file_save_data($jp2_data, "temporary://{$base_name}_OBJ.jp2");

  $args = array();

  if($resize) {

    $args[] = '-resize ' . escapeshellarg("600x800");
  } else {

    $args[] = '-resize ' . escapeshellarg("1200x1600");
  }

  $args[] = '-quality ' . escapeshellarg(variable_get('imagemagick_quality', 75));

  // For members of the Marquis de Lafayette Prints Collection
  if($delete_layers) {

    $args[] = '+delete';
  }

  // For the label (branding)
  $args[] = '\(';
  $args[] = '-background White';
  $args[] = '-gravity center';

  // Insecure
  $args[] = "label:\"$collection_name\\nLafayette College Libraries\\nhttp://digital.lafayette.edu/$path_alias\"";
  $args[] = '\)';
  $args[] = '-append';

  $derivative_file = islandora_large_image_imagemagick_convert($jp2file->uri, "temporary://{$base_name}_JPG.jpg", $args);

  if ($derivative_file === FALSE) {

    drupal_set_message(t('Failed to create JPG derivative'), 'error');
    return FALSE;
  }
  drush_log("Successfully generated the JPG for {$object->id}", 'success');

  $jpg_ds = $object[$ds_id];
  if($jpg_ds) {

    islandora_delete_datastream($jpg_ds);
  }

  islandora_large_image_add_datastream($object, $ds_id, $derivative_file, 'image/jpeg', t($ds_label));
  drush_log("Successfully ingested the JPG into the JPG datastream for {$object->id}", 'success');

  if($jpg_ds->size < 9000) {

    drush_log(dt("The JPG datastream for !object_id appears to be conspicuously small (!size); the derivative may not have been generated properly", array('!size' => $jpg_ds->size,
																			   '!object_id' => $object->id)), 'warning');
  }

  /*
  try {

    file_delete($jp2file);
  } catch(PDOException $e) {

    drush_log("Could not delete the temporary TIFF file: {$e->getMessage()}", 'warning');
  }

  try {

    $result = file_unmanaged_delete($derivative_file);
  } catch(PDOException $e) {

    drush_log("Could not delete the temporary JPEG file: {$e->getMessage()}", 'warning');
  }
  */
  file_delete($jp2file);
  $result = file_unmanaged_delete($derivative_file);

  return $result;
}

